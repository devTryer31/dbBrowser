<Window x:Class="dbBrowser.Views.Windows.MainDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Запрос на ввод" Height="120" Width="400" HorizontalAlignment="Center">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Width="100" Margin="10 5"
                Content="Ok" IsCancel="True"/>
        <UniformGrid Columns="2">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputText"/>
            <TextBox VerticalAlignment="Center" Margin="0 0 5 0" x:Name="ResultText"/>
        </UniformGrid>
    </DockPanel>
</Window>
